<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_0"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:orientation="vertical">

            <View
                android:id="@+id/view1"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/hollow_circle_shape_rectangle"
                android:paddingTop="@dimen/dp_7" />

            <TextView
                android:id="@+id/tv_solid_line"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_134"
                android:layout_marginStart="@dimen/dp_5"
                android:background="@drawable/dotted_line_vertical"
                android:layerType="software" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4">

                <TextView
                    android:id="@+id/tv_awb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.2"
                    android:text="The awb："
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_13" />

                <TextView
                    android:id="@+id/tv_awb_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.2"
                    android:text="YT82719205718275"
                    android:textColor="#666660"
                    android:textSize="@dimen/dp_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4">

                <TextView
                    android:id="@+id/tv_recipient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.2"
                    android:text="Recipient："
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_13" />

                <TextView
                    android:id="@+id/tv_recipient_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.2"
                    android:text="135 0284 5175"
                    android:textColor="#666660"
                    android:textSize="@dimen/dp_13" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_into_the_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.2"
                    android:text="Into the time："
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_13" />

                <TextView
                    android:id="@+id/tv_into_the_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.2"
                    android:text="2021.10.12 12:26"
                    android:textColor="#666660"
                    android:textSize="@dimen/dp_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_into_record"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_36"
                    android:background="@drawable/shape_btn_radius_15"
                    android:text="into record"
                    android:textAllCaps="false"
                    android:textColor="#7DCA1B"
                    android:textSize="@dimen/dp_13" />

                <Button
                    android:id="@+id/btn_take_a_code"
                    android:layout_width="@dimen/dp_93"
                    android:layout_height="@dimen/dp_36"
                    android:layout_marginStart="@dimen/dp_12"
                    android:background="@drawable/shape_btn_radius_15"
                    android:text="Take a code"
                    android:textAllCaps="false"
                    android:textColor="#7DCA1B"
                    android:textSize="@dimen/dp_13" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
